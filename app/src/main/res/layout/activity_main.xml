<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.izi.multiple.MainActivity"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01579B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarPopupTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40C4FF"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@android:drawable/ic_input_add"
            android:gravity="center" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="#ffaabbcc"
            android:hint="כאן המקום ליחתוב מה אתה מרגיש"
            android:selectAllOnFocus="false" />

    </LinearLayout>

    <com.example.izi.multiple.CustomView
        android:id="@+id/title_animated"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center" />

    <ListView
        android:id="@+id/main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

</LinearLayout>
